@model www.Models.Post
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dd class = "col-sm-12">
           <div><pre>model.Content.Trim()</pre></div>
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>
